// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json", /* Recommended React Native TSConfig base */
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    /* Completeness */
    "jsx": "react-native",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@data/*": [
        "src/data/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@presentation/*": [
        "src/presentation/*"
      ],
      "typeRoots": [
        "./src/types",
        "./node_modules/@types"
      ]
    }
  }
}